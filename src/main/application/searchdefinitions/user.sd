search user {

    document user {

        field user_id type string {
            indexing: summary | attribute
            attribute: fast-search
        }


        field user_name type string {
            indexing: summary
        }


        field location type position {
            indexing: summary | attribute
        }

        field presentation type string {
            indexing: summary
        }

        field skills type weightedset<string> {
            indexing: index | summary
            match:word
        }

         field belongs_to type array<string> {
            indexing: summary
        }


    }

}
