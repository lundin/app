search job {

    document job {

        field status type string {
            indexing: summary
        }

        field posted_by type string {
            indexing: summary
        }

        field title type string {
            indexing: summary | index
        }

         field description type string {
            indexing: summary | index
        }

         field skills type weightedset<string> {
            indexing: summary | index
            match:word
        }


    }

    fieldset default {
        fields: title,description
    }

    rank-profile jobs inherits default {

        first-phase {
            expression:nativeRank(title, description)
        }

    }



}
