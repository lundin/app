search activity {

    document activity {

        field title type string {
            indexing: summary | index
        }

        field abstract type string {
            indexing: summary | index
        }

        field description type string {
            indexing: summary | index
        }

        field tags type array<string> {
            indexing: summary | index
        }

        field status type string {
            indexing: summary
        }

        field outcome type string {
            indexing: summary
        }


        field project_leader type string {
            indexing: summary
        }


        field title project_members type array<string> {
            indexing: summary
        }

         field title project_tools type array<string> {
            indexing: summary | index
        }


         field title associated_company type array<string> {
            indexing: summary | index
        }


    }

    fieldset default {
        fields: title,tags,abstract,body
    }
 

}
